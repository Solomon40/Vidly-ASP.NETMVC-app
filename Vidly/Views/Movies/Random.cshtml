@model Vidly.ViewModel.RandomMovieViewModel

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    Render class popular dynamically
*@
@{var className = Model.Customer.Count > 0 ? "popular" : null;

}

<h2 class="@className">@Model.Movie.Name</h2>

@if (Model.Customer.Count == 0)
            {
                <text> No one has rented this movie yet. Be the first!</text>
            }

else
            {
                foreach (var customer in Model.Customer)
                            {
                                <ul>
                                    <li>@customer.Name</li>
                                </ul>
                            }
            }
